<div class="space">
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.pexels.com/photos/1668860/pexels-photo-1668860.jpeg?cs=srgb&dl=round-brown-wooden-table-with-chairs-inside-room-1668860.jpg&fm=jpg)">
    <%= @space.title %>
    <%= @space.description %>


  </div>
</div>



<div class="bookings-form" data-unavailable="<%= @space.unavailable_dates.to_json %>">
<%= simple_form_for [@space, @booking] do |f| %>
      <%= f.input :start_date, as: :string, type: :text %>
      <%= f.input :end_date, as: :string, type: :text%>
      <%= f.submit "Request booking", class: "button-home" %>
    <% end %>
    <%= link_to "Back home", root_path %>
</div>
