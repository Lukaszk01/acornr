<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "newlogo.png", alt: "logo" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <div class="nav-text">
          <li><%= link_to "New space", new_space_path, class: "nav-text" %></li>
        </div>
        <div class="nav-text">
          <li><%= link_to "Bookings", dashboard_index_path, class: "nav-text" %></li>
        </div>
        <div class="nav-text">
          <li><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-text" %></li>
        </div>
        <li class="nav-item dropdown">
          <%= image_tag "useravatar.png", class: "avatar"%>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login/Sign up", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
